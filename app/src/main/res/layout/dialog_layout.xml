<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/_7sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

    <TextView
        android:id="@+id/fill_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fill Student Details"
        android:textSize="@dimen/_18ssp"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_5sdp"
        android:textColorHint="@color/light_blue"
        />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Student Name"
            android:layout_below="@+id/fill_student"
            >
            <EditText
                android:id="@+id/student_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_person_24"
                />
        </com.google.android.material.textfield.TextInputLayout>
 <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Student Email"
            android:layout_below="@+id/name_layout"
            >
            <EditText
                android:id="@+id/student_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_email_24"
                />
        </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pass_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Student Password"
        android:layout_below="@+id/email_layout"
        app:endIconMode="password_toggle"
        >
        <EditText
            android:id="@+id/student_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_lock_open_24"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phone_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Student Phone"
        android:layout_below="@+id/pass_layout"
        >
        <EditText
            android:id="@+id/student_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_local_phone_24"
            />
    </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_below="@+id/phone_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_8sdp"
            />


</RelativeLayout>
</androidx.cardview.widget.CardView>