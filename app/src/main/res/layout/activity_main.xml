<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawable_layout"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/app_bar_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp"
            android:background="@color/light_blue"
            >
            <ImageView
                android:id="@+id/show_navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3ssp"
                android:src="@drawable/baseline_density_medium_24"
                />
            <ImageView
                android:id="@+id/more_vert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_more_vert_24"
                android:translationX="@dimen/_240sdp"
                />
        </LinearLayout>
        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_530sdp"
            android:layout_below="@id/app_bar_linear_layout"
            />
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frame_layout"
            app:menu="@menu/bottom_navigation_item"
            app:labelVisibilityMode="labeled"
            />
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:headerLayout="@layout/hearder_profile_design_for_navigation"
        app:menu="@menu/custom_navigation_drawer"
        android:layout_gravity="start"
        android:translationY="@dimen/_45sdp"
        />

</androidx.drawerlayout.widget.DrawerLayout>
